<h2>New Adventure</h2>

<%= form_for @adventure do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %><br>
  <%= f.label "Author:" %>
  <%= f.text_field :author %><br><br>
  <%= f.fields_for :pages, @adventure.pages.build do |p| %>
    <%= p.label "Page Name:" %>
    <%= p.text_field :name %><br>
    <%= p.label "Text:" %>
    <%= p.text_area :text %>
  <% end %>
  <%= f.submit %>
<% end %>